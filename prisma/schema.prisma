generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Seller {
  id        String   @id
  name      String
  specialty String
  imageUrl  String
  rating    Float
  products  Product[]
}

model Product {
  id        String   @id @default(cuid())
  title     String
  price     Float
  imageUrl  String
  seller    Seller   @relation(fields: [sellerId], references: [id])
  sellerId  String
}